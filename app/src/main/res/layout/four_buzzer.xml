<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="player 1"
        android:id="@+id/fourPlayer1Button"
        android:layout_marginTop="33dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="player 2"
        android:id="@+id/fourPlayer2Button"
        android:layout_below="@+id/fourPlayer1Button"
        android:layout_alignParentStart="true"
        android:layout_marginTop="66dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="player 3"
        android:id="@+id/fourPlayer3Button"
        android:layout_marginTop="73dp"
        android:layout_below="@+id/fourPlayer2Button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="player 4"
        android:id="@+id/fourPlayer4Button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="61dp"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
